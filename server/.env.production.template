# LiveDisplay Enterprise - Production Environment Configuration
# Copy this file to .env and fill in your production values

# ================================
# APPLICATION CONFIGURATION
# ================================
NODE_ENV=production
PORT=4000
APP_NAME="LiveDisplay Enterprise"
APP_VERSION=2.0.0
APP_URL=https://your-domain.com
API_PREFIX=/api/v1

# ================================
# DATABASE CONFIGURATION
# ================================
# PostgreSQL Database
DB_HOST=your-postgres-host
DB_PORT=5432
DB_NAME=livedisplay_production
DB_USER=livedisplay_user
DB_PASSWORD=your-secure-database-password
DB_SSL=true
DB_MAX_CONNECTIONS=50
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# Database Pool Configuration
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=10000

# ================================
# AUTHENTICATION & SECURITY
# ================================
# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_HISTORY_COUNT=12
PASSWORD_EXPIRY_DAYS=90

# Session Configuration
SESSION_SECRET=your-session-secret-minimum-32-characters-long
SESSION_TIMEOUT_MINUTES=480
SESSION_IDLE_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SESSIONS=5

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_KEY_PREFIX=livedisplay:
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# Redis Cluster (if using cluster)
REDIS_CLUSTER_NODES=redis1:6379,redis2:6379,redis3:6379

# ================================
# EMAIL CONFIGURATION
# ================================
# SMTP Settings
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_NAME="LiveDisplay System"
SMTP_FROM_EMAIL=noreply@your-domain.com

# Email Templates
EMAIL_TEMPLATE_DIR=./src/templates/email
EMAIL_LOGO_URL=https://your-domain.com/logo.png

# ================================
# FILE STORAGE CONFIGURATION
# ================================
# Local Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_PREFIX=livedisplay/

# Cloudinary Configuration (Alternative)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# External Logging (Optional)
LOG_EXTERNAL_ENABLED=false
LOG_EXTERNAL_URL=https://your-log-service.com/api/logs
LOG_EXTERNAL_API_KEY=your-log-service-api-key

# ================================
# MONITORING & HEALTH CHECKS
# ================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
METRICS_PORT=9090

# External Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
DATADOG_API_KEY=your-datadog-api-key

# ================================
# NOTIFICATION SERVICES
# ================================
# Twilio SMS (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_PROJECT_ID=your-firebase-project-id

# Slack Integration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_CHANNEL=#alerts

# ================================
# BACKUP CONFIGURATION
# ================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-s3-bucket
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# ================================
# PERFORMANCE OPTIMIZATION
# ================================
# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_COMPRESSION=true
ENABLE_ETAG=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================
# Google Services (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Microsoft Services (Optional)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# LDAP/Active Directory (Optional)
LDAP_URL=ldap://your-ldap-server:389
LDAP_BIND_DN=cn=admin,dc=company,dc=com
LDAP_BIND_CREDENTIALS=your-ldap-password
LDAP_SEARCH_BASE=ou=users,dc=company,dc=com

# ================================
# DEVELOPMENT & DEBUGGING
# ================================
# Only set these in development/staging
DEBUG=false
ENABLE_SWAGGER=false
ENABLE_CORS=true
CORS_ORIGIN=https://your-frontend-domain.com
TRUST_PROXY=true

# API Documentation
SWAGGER_TITLE="LiveDisplay Enterprise API"
SWAGGER_DESCRIPTION="Comprehensive Office Management System API"
SWAGGER_VERSION=2.0.0
SWAGGER_HOST=api.your-domain.com

# ================================
# CLUSTERING & SCALING
# ================================
CLUSTER_WORKERS=0
CLUSTER_MAX_MEMORY=1024
CLUSTER_RESTART_DELAY=1000

# Load Balancer
BEHIND_PROXY=true
PROXY_TRUST_LEVEL=1

# ================================
# COMPLIANCE & AUDIT
# ================================
AUDIT_LOG_RETENTION_DAYS=2555
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555
ANONYMIZE_LOGS=true

# ================================
# FEATURE FLAGS
# ================================
FEATURE_TWO_FACTOR_AUTH=true
FEATURE_BIOMETRIC_AUTH=false
FEATURE_ADVANCED_REPORTING=true
FEATURE_MOBILE_APP_SUPPORT=true
FEATURE_OFFLINE_MODE=false
FEATURE_REAL_TIME_NOTIFICATIONS=true

# ================================
# TIMEZONE & LOCALIZATION
# ================================
DEFAULT_TIMEZONE=UTC
SUPPORTED_LOCALES=en,es,fr,de,ja,zh
DEFAULT_LOCALE=en
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:mm:ss
CURRENCY=USD

# ================================
# MAINTENANCE MODE
# ================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# ================================
# CUSTOM BUSINESS LOGIC
# ================================
# Company Specific Settings
COMPANY_NAME="Your Company Name"
COMPANY_LOGO_URL=https://your-domain.com/company-logo.png
COMPANY_TIMEZONE=America/New_York
WORKING_HOURS_START=09:00
WORKING_HOURS_END=17:00
WORKING_DAYS=1,2,3,4,5

# Leave Policy
ANNUAL_LEAVE_DAYS=21
SICK_LEAVE_DAYS=12
CASUAL_LEAVE_DAYS=12
MATERNITY_LEAVE_DAYS=180
PATERNITY_LEAVE_DAYS=15

# Room Booking
MAX_BOOKING_DURATION_HOURS=8
MIN_BOOKING_DURATION_MINUTES=30
ADVANCE_BOOKING_DAYS=90
BOOKING_CANCELLATION_HOURS=2

# Visitor Management
VISITOR_BADGE_VALIDITY_HOURS=8
MAX_VISITORS_PER_HOST=10
VISITOR_PHOTO_REQUIRED=true
BACKGROUND_CHECK_REQUIRED=false
