{
  "name": "livedisplay-enterprise-server",
  "version": "2.0.0",
  "description": "Enterprise Office Management System - Production Ready",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "migrate": "node scripts/migrate.js",
    "migrate:rollback": "node scripts/rollback.js",
    "seed": "node scripts/seed.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "audit:security": "npm audit --audit-level moderate",
    "build": "npm run lint && npm run test",
    "docker:build": "docker build -t livedisplay-server .",
    "docker:run": "docker run -p 4000:4000 livedisplay-server",
    "backup:db": "node scripts/backup.js",
    "restore:db": "node scripts/restore.js",
    "health": "node scripts/health-check.js",
    "logs": "pm2 logs livedisplay-server",
    "monitor": "pm2 monit",
    "cluster": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop livedisplay-server",
    "restart": "pm2 restart livedisplay-server",
    "cleanup": "node scripts/cleanup.js"
  },
  "keywords": [
    "enterprise",
    "office-management",
    "hr-system",
    "employee-management",
    "room-booking",
    "visitor-management",
    "asset-tracking",
    "attendance-system"
  ],
  "author": "LiveDisplay Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.8.1",
    "express-fileupload": "^1.4.0",
    "pg": "^8.11.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "zod": "^3.21.4",
    "validator": "^13.9.0",
    "isomorphic-dompurify": "^2.1.0",
    "winston": "^3.9.0",
    "winston-daily-rotate-file": "^4.7.1",
    "nodemailer": "^6.9.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.1",
    "pdf-lib": "^1.17.1",
    "exceljs": "^4.3.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "cron": "^2.3.1",
    "redis": "^4.6.7",
    "ioredis": "^5.3.2",
    "bull": "^4.11.1",
    "socket.io": "^4.7.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "express-openapi-validator": "^5.0.4",
    "express-slow-down": "^1.6.0",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "dotenv": "^16.3.1",
    "config": "^3.3.9",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0",
    "crypto": "^1.0.1",
    "fs-extra": "^11.1.1",
    "archiver": "^5.3.1",
    "unzipper": "^0.10.14",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "otplib": "^12.0.1",
    "twilio": "^4.13.0",
    "aws-sdk": "^2.1406.0",
    "@aws-sdk/client-s3": "^3.363.0",
    "@aws-sdk/client-ses": "^3.363.0",
    "cloudinary": "^1.37.3",
    "puppeteer": "^20.7.2",
    "html-pdf": "^3.0.1",
    "pdfkit": "^0.13.0",
    "canvas": "^2.11.2",
    "jimp": "^0.22.8",
    "geolib": "^3.3.4",
    "ip": "^1.1.8",
    "useragent": "^2.3.0",
    "express-device": "^0.4.2",
    "express-user-agent": "^1.0.15",
    "node-cache": "^5.1.2",
    "memory-cache": "^0.2.0",
    "lru-cache": "^10.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "terser-webpack-plugin": "^5.3.9"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^2.8.8",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "@types/node": "^20.4.2",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1",
    "artillery": "^2.0.0",
    "newman": "^5.3.2",
    "nyc": "^15.1.0",
    "sinon": "^15.2.0",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "faker": "^6.6.6",
    "@faker-js/faker": "^8.0.2",
    "factory-girl": "^5.0.4",
    "nock": "^13.3.1",
    "mock-fs": "^5.2.0",
    "testcontainers": "^9.9.1",
    "docker-compose": "^0.24.2"
  },
  "peerDependencies": {
    "pm2": "^5.3.0"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/livedisplay-enterprise.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/livedisplay-enterprise/issues"
  },
  "homepage": "https://github.com/your-org/livedisplay-enterprise#readme",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/migrations/**",
      "!src/seeds/**",
      "!src/scripts/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:security/recommended"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "src/logs/",
      "src/uploads/",
      "src/temp/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
