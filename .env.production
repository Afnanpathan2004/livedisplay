# Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=4000

# Client Configuration
CLIENT_ORIGIN=http://localhost:5174
VITE_API_URL=http://localhost:4000

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=24h

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/liveboard?schema=public
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration (Optional for production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production
SESSION_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5174,http://localhost:3000

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@liveboard.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
